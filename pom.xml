<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.demo.Farmework</groupId>
    <artifactId>Demo_FrameWork_Test</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>jar</packaging>

    <name>Demo</name>
    <description>Demo UI Automated Tests</description>

    <url>http://maven.apache.org</url>

    <properties>
        <hamcrest.version>1.3</hamcrest.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <ngwebdriver.version>0.9.7</ngwebdriver.version>
        <selenium.version>3.14.0</selenium.version>
        <yaml.version>1.17</yaml.version>
        <apache.poi.version>3.6</apache.poi.version>
        <testng.version>6.9.10</testng.version>
        <commons.valicator.version>1.5.0</commons.valicator.version>
        <pdfbox.version>1.7.1</pdfbox.version>
        <extentreports.version>3.1.3</extentreports.version>
        <mysql.version>5.1.18</mysql.version>
        <rest-assured.version>5.3.0</rest-assured.version>
        <log4j.version>1.2.17</log4j.version>
        <junit.version>4.11</junit.version>
        <mongodb.version>3.3.0</mongodb.version>
        <xml.apis.version>1.4.01</xml.apis.version>
        <logback.version>1.1.7</logback.version>
        <webdrivermanager.version>1.5.0</webdrivermanager.version>
        <fillo.version>1.15</fillo.version>
        <oracle.version>6</oracle.version>
        <springweb.version>3.0.2.RELEASE</springweb.version>
        <maven.complier.version>3.7.0</maven.complier.version>
        <maven.surefire.version>2.20.1</maven.surefire.version>
        <phantom.version>1.4.4</phantom.version>
        <galen.version>2.4.4</galen.version>
        <lombok.version>1.18.8</lombok.version>
        <googlecode.json.version>1.1.1</googlecode.json.version>
        <commons.io>2.4</commons.io>
        <jackson.version>2.14.2</jackson.version>
        <json.version>20220924</json.version>
    </properties>

    <build>
        <testSourceDirectory>src/test/java</testSourceDirectory>

        <resources>
            <resource>
                <directory>src/test/resources</directory>
                <includes>
                    <include>**/*.xlsx</include>
                    <include>**/*.yaml</include>
                    <include>**/*.xml</include>
                </includes>
            </resource>
        </resources>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.3</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                    <fork>true</fork>
                    <meminitial>512m</meminitial>
                    <maxmem>1028m</maxmem>
                    <encoding>Cp1252</encoding>
                </configuration>
            </plugin>
        </plugins>
    </build>

